                                        </copy>
                                        <copy todir="/home/workspace/${release.project.name}/classify_new">
                                            <fileset dir="${basedir}/src/main/classify_new">
                                                <exclude name="**/.svn/" />
                                            </fileset>
                                        </copy>
                                    </tasks>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
		<profile>
