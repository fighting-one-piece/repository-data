                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>1.7</version>
                        <executions>
                            <execution>
                                <phase>compile</phase>
                                <configuration>
                                    <tasks>
                                        <copy todir="/home/workspace/${release.project.name}/models">
                                            <fileset dir="${basedir}/src/main/models">
                                                <exclude name="**/.svn/" />
                                            </fileset>
                                        </copy>
                                        <copy todir="/home/workspace/${release.project.name}/html">
