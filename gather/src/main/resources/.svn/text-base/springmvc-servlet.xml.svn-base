				<prop key="org.springframework.web.bind.MissingServletRequestParameterException">/error/400</prop>
				<prop key="org.springframework.beans.TypeMismatchException">/error/400</prop>
				<prop key="org.springframework.web.servlet.mvc.multiaction.NoSuchRequestHandlingMethodException">/error/404</prop>
				<prop key="org.springframework.http.converter.HttpMessageNotWritableException">/error/500</prop>
				<prop key="org.springframework.beans.ConversionNotSupportedException">/error/500</prop>
			</props>
		</property>
	</bean>
	 -->
	<!-- 自动扫描组件 -->
	
	<context:component-scan base-package="com.netease.gather.web.controller"/>
	
	<!-- 配置拦截器 -->
	
	<!--<mvc:interceptors>-->
		<!--<mvc:interceptor>-->
			<!--<mvc:mapping path="/admin/**"/>-->
			<!--<bean class="com.netease.gatherceptor.LogonCheckInterceptors"/>-->
		<!--</mvc:interceptor>-->
	<!--</mvc:interceptors>-->
	
	<bean id="mappingJacksonJsonView" class="org.springframework.web.servlet.view.json.MappingJacksonJsonView">
		<property name="contentType" value="application/json;charset=UTF-8"/>
		<property name="objectMapper">
			<bean class="org.codehaus.jackson.map.ObjectMapper"/>
		</property>
	</bean>
	
	<bean id="mappingJacksonJsonpView" class="com.netease.gather.common.util.view.MappingJacksonJsonpView">
		<property name="contentType" value="text/javascript"/>
		<property name="objectMapper">
			<bean class="org.codehaus.jackson.map.ObjectMapper"/>
		</property>
	</bean>

</beans>
