<?xml version="1.0" encoding="gbk" ?>
<!DOCTYPE sqlMap
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="special">

	<typeAlias alias="special" type="com.netease.gather.domain.Special" />

	<sql id="_columns">
		docno,channel,col,del,updatetime,createtime
	</sql>

    <insert id="insertOne" parameterClass="special">
        insert into special
        (docno,channel,col,updatetime, createtime)
        values(#docno#,#channel#,#col#,#updatetime#, #createtime#)
        <selectKey resultClass="long" type="post" keyProperty="autoid">
            select last_insert_id() as value
        </selectKey>
    </insert>

    <update id="updateOne" parameterClass="Map">
        UPDATE special
        <dynamic prepend="set">
            <isNotEmpty prepend="," property="condition">
                <![CDATA[ $condition$ ]]>
            </isNotEmpty>
            <isNotEmpty prepend="," property="docno">
                docno=#docno#
            </isNotEmpty>
            <isNotEmpty prepend="," property="updatetime">
                updatetime=#updatetime#
            </isNotEmpty>
        </dynamic>
        WHERE autoid = #autoid#
    </update>


    <sql id="_where">
        <dynamic prepend="where">
            <isNotEmpty prepend="and" property="condition">
                <![CDATA[ $condition$ ]]>
            </isNotEmpty>
            <isNotEmpty prepend="and" property="autoid">
                autoid=#autoid#
            </isNotEmpty>
            <isNotEmpty prepend="and" property="docno">
                docno=#docno#
            </isNotEmpty>
            <isNotEmpty prepend="and" property="col">
                col=#col#
            </isNotEmpty>
            <isNotEmpty prepend="and" property="channel">
                channel=#channel#
            </isNotEmpty>
            <isNotEmpty prepend="and" property="updatetime_start">
                <![CDATA[ updatetime>=#updatetime_start#]]>
            </isNotEmpty>
            <isNotEmpty prepend="and" property="updatetime_end">
                <![CDATA[ updatetime<#updatetime_end#]]>
            </isNotEmpty>
        </dynamic>
    </sql>

    <select id="getListByParameters" parameterClass="Map" resultClass="special">
        select autoid,
        <include refid="_columns"/>
        from special
        <include refid="_where"/>
        <isNotEmpty property="order">
            <![CDATA[ order by $order$ ]]>
        </isNotEmpty>
        <dynamic prepend="limit">
            <isNotEmpty property="start">#start#</isNotEmpty>
            <isNotEmpty property="size">, #size#</isNotEmpty>
        </dynamic>
    </select>

    <select id="getCountByParameters" parameterClass="Map" resultClass="java.lang.Integer">
        select count(autoid)
        from special
        <include refid="_where"/>
        <isNotEmpty property="order">
            <![CDATA[ order by $order$ ]]>
        </isNotEmpty>
        <dynamic prepend="limit">
            <isNotEmpty property="start">#start#</isNotEmpty>
            <isNotEmpty property="size">, #size#</isNotEmpty>
        </dynamic>
    </select>

    <select id="getOneByParameters" parameterClass="Map" resultClass="special">
        select autoid,
        <include refid="_columns"/>
        from special
        <include refid="_where"/>
    </select>

    <delete id="deleteSomeByParameters" parameterClass="Map">
        delete
        from special
        <include refid="_where"/>
    </delete>

    <update id="signDelSomeByParameters" parameterClass="Map">
        update special set del=1
        <include refid="_where"/>
    </update>

</sqlMap>
