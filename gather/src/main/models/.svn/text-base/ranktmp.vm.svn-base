    function showtab(id){
        var divsize = $tit.size();
        for(var i=1;i<=divsize;i++){
            $("#div"+i).hide();
        }
        $("#"+id).show();
        $("#sections a").removeClass('selected');
        var current = id.split('div')[1] - 1;
        $("#sections a").eq(current).addClass('selected');
    }
