<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=gbk" />
    <title>新闻热点聚合</title>
    <link rel="stylesheet" type="text/css" href="/css/global.css">
    <link rel="stylesheet" type="text/css" href="/css/jquery-ui.min.css">
    <script src="/js/jquery-1.10.1.min.js"></script>
    <script src="/js/jquery-migrate-1.2.1.min.js"></script>
    <script src="/js/jquery-ui.min.js"></script>
    <script src="/js/demo.js"></script>
</head>
<body>
<div>

    #parse('hotsplit.vm')

    <div class="time-info">$!{chname}频道:<span id="selectedTime">$date.format('yyyy-MM-dd HH:mm:ss',$!{end})</span></div>
    <div class="time-selection">
        <select id="tsec"></select>
##        <input type="submit" value="查询" onclick="jpage();"/>
        <input type="submit" value="查询" onclick="visit('$!{channel}');"/>
    </div>
##    <div id = "title">$!{chname}频道：$date.format('yyyy-MM-dd HH:mm:ss',$!{start})--$date.format('HH:mm:ss',$!{end})热点</div>
    <div class="wrapper clearfix">

        <div id="hots" class="left">
            <div id="sections" class="clearfix" >
                #foreach($ctit in $tit)
                    <div class="tab"><a class="tit" href="javascript:showtab('div${velocityCount}');" onmouseover="this.click();">$ctit</a></div>
                #end
            </div>

            #foreach($clist in $sub)
            <div id="div$!{velocityCount}" style="display: none;">
                <div><span>热点数：$clist.size()</span></div>
                <ul class="left-ul">
                #foreach($shot in $clist)
                    <li>

                        <a class="left-title" href="$!{shot.cdoc.url}" target="_blank"><span>$!{shot.cdoc.title}(from $!{shot.cdoc.source})(len:$!{shot.titlength})#if($!{shot.cuttit})(截取标题：$!{shot.cuttit})#end #if($!{shot.boldtit})(19标题：$!{shot.boldtit})#end</span></a>#if($!{shot.moreurl}) &nbsp;&nbsp;&nbsp;<a class="left-more" href="$!{shot.moreurl}" target="_blank"><span>更多</span></a>#end
                        <br>
                                <span>[媒体关注度] 共<span class="media">#foreach($so in $shot.soset)#if($velocityCount>1)、#end$!{so}#end</span> 等${shot.soset.size()}家媒体报道##
                                </span>
                        <br>
                                <span>
                                    [新闻报道数] 共${shot.dlist.size()}篇文章，
                                    #foreach($doc in $shot.dlist)
                                        #if($!{doc.source}=='163')
                                            <a class="f163" href="$!{doc.url}" target="_blank" title="$!{doc.title}(from $!{doc.source})"><span>$!{velocityCount}</span></a>
                                        #else
                                            <a href="$!{doc.url}" target="_blank" title="$!{doc.title}(from $!{doc.source})"><span>$!{velocityCount}</span></a>
                                        #end
                                    #end##
                                </span>
                        #if($shot.simtit)
                        <br>
                                <span class="left-similar">
                                    [相似头条] ($shot.simtit)
                                </span>
                        #end

##                        <span>[$velocityCount]</span><a href="$!{shot.url}" target="_blank"><span>$!{shot.title}</span></a> #if($!{shot.moreurl}) &nbsp;&nbsp;&nbsp;<a href="$!{shot.moreurl}" target="_blank"><span>【更多】</span></a>#end<br>
##                        <span>(来源:$!{shot.source})(共有:$!{shot.scount}家媒体,$!{shot.count}篇文章,其中163有:$!{shot.ntes}篇文章)</span> ##,频道：$!{shot.col}
                    </li>
                #end
                </ul>
            </div>
            #end
        </div>
        <div class="right">
            <iframe src="/$!{channel}/headlines/${date.format('yyyyMMddHHmmss',$!{end})}.html" style="Z-INDEX: 2; VISIBILITY: inherit; WIDTH: 100%; HEIGHT: 100%" frameborder="0" scrolling="no"></iframe>
        </div>
    </div>
</div>

<script type="text/javascript">

    $(function(){
                loadopt('$!{channel}');
                $("#div1").show();
                $("#sections a").eq(0).addClass('selected');
            }
    );

    function showtab(id){
        var divsize = $tit.size();
        for(var i=1;i<=divsize;i++){
            $("#div"+i).hide();
        }
        $("#"+id).show();
        $("#sections a").removeClass('selected');
        var current = id.split('div')[1] - 1;
        $("#sections a").eq(current).addClass('selected');
    }
</script>

</body>
</html>