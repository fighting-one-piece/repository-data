<?xml version="1.0" encoding="gbk" ?>
<!DOCTYPE sqlMap
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="special_doc">

	<typeAlias alias="specialDoc" type="com.netease.gather.domain.SpecialDoc" />

	<sql id="_columns">
		specialid,docno,del,createtime
	</sql>

    <insert id="insertOne" parameterClass="specialDoc">
        insert into special_doc
        (specialid, docno, createtime)
        values(#specialid#, #docno#, #createtime#)
        <selectKey resultClass="long" type="post" keyProperty="autoid">
            select last_insert_id() as value
        </selectKey>
    </insert>

    <update id="updateOne"  parameterClass="Map">
        UPDATE special_doc
        <dynamic prepend="set">
            <isNotEmpty prepend="," property="new_specialid">
                specialid=#new_specialid#
            </isNotEmpty>
        </dynamic>
        WHERE docno = #docno# and specialid=#old_specialid#
    </update>

    <sql id="_where">
        <dynamic prepend="where">
            <isNotEmpty prepend="and" property="condition">
                <![CDATA[ $condition$ ]]>
            </isNotEmpty>
            <isNotEmpty prepend="and" property="specialid">
                specialid=#specialid#
            </isNotEmpty>
            <isNotEmpty prepend="and" property="docno">
                docno=#docno#
            </isNotEmpty>
        </dynamic>
    </sql>

    <select id="getListByParameters" parameterClass="Map" resultClass="specialDoc">
        select autoid,
        <include refid="_columns"/>
        from special_doc
        <include refid="_where"/>
        <isNotEmpty property="order">
            <![CDATA[ order by $order$ ]]>
        </isNotEmpty>
        <dynamic prepend="limit">
            <isNotEmpty property="start">#start#</isNotEmpty>
            <isNotEmpty property="size">, #size#</isNotEmpty>
        </dynamic>
    </select>

    <select id="getCountByParameters" parameterClass="Map" resultClass="java.lang.Integer">
        select count(autoid)
        from special_doc
        <include refid="_where"/>
        <isNotEmpty property="order">
            <![CDATA[ order by $order$ ]]>
        </isNotEmpty>
        <dynamic prepend="limit">
            <isNotEmpty property="start">#start#</isNotEmpty>
            <isNotEmpty property="size">, #size#</isNotEmpty>
        </dynamic>
    </select>

    <select id="getOneByParameters" parameterClass="Map" resultClass="specialDoc">
        select autoid,
        <include refid="_columns"/>
        from special_doc
        <include refid="_where"/>
    </select>

    <delete id="deleteSomeByParameters" parameterClass="Map">
        delete
        from special_doc
        <include refid="_where"/>
    </delete>

    <update id="signDelSomeByParameters" parameterClass="Map">
        update special_doc set del=1
        <include refid="_where"/>
    </update>

</sqlMap>
